<% provide(:title, 'Contact Form') %>
<h1>Contact Support</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :content %>
      <%= f.text_area :content %>

      <%= f.submit "Send form", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>